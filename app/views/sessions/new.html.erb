<div class="container" >
  <h1 class="text-center mt-5 mb-4">Login for Blogger-Ceci-App</h1>
    
    <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
      <div class="form-group">
        <label for="email"><%= f.label :email %></label>
        <%= f.email_field :email, class: "form-control shadow rounded", id: "email", placeholder: "Enter your email address" %>
      </div>
      <div class="form-group">
        <label for="password"><%= f.label :password %></label>
        <%= f.password_field :password, class: "form-control shadow rounded", id: "password", placeholder: "Enter your password" %>
      </div>
      <div class="my-3">
        <%= f.submit "Log in", class: "btn btn-primary" %>
      </div>
    <% end %>

  <div class="my-4">
    <%= link_to 'Back to home', root_path, class: "link" %>
  </div>
</div>